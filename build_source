# Usage
#
# $ source this_script

for filepath in $(find "$HOME"/eco/lib -type f | grep -v -e '\.[a-z]*$'); do
  filename=$(basename "$filepath")
  function_name=$(basename "$filepath")

  # echo "==================================================="
  # echo build from "$filepath"
  # echo "==================================================="

  eval "function $function_name() { source $HOME/eco/lib/$function_name \$@; }"
  # which "$function_name"
done
