#!/usr/bin/env bash -eu

# Usuage
#
# $ eco docker rmi
#

_eco_path () {
  local eco_path=${ECO_HOME:-"$HOME/eco"}
  echo "$eco_path"
}

_eco_list () {
  for file in $(find  "$(_eco_path)/bin" ); do
    basename "$file" | sed -E 's/-/ /g'
  done
}

_eco_commands() {
  find $(_eco_path)/bin \
    -exec sh -c 'basename {}' \; | \
    sed -E 's/[^0-9A-Za-z-]//g' | \
    sed -E 's/-/ /g' | \
    grep -v -E ^bin$ | \
    sed -E 's/^/\$ eco /' 
}

for arg in $@; do
  if [[ "$arg" == '--path' ]]; then
    _eco_path
    return
  elif [[ "$arg" == '--list' ]]; then
    _eco_list
    return
 elif [[ "$arg" == '--commands' ]]; then
    _eco_commands
    return
  fi
done

_eco () {
  local script_file_name=$(echo $1 | sed -E 's/ /-/g')
  local script_full_path="$(_eco_path)/bin/$script_file__name"
 
  if [[ -z "$1" ]]; then
    eval "$script_full_path"
    return
  else
    if [[ -z "$(_eco_commands)" ]];
      then echo Command not found && return
    fi
    
    eval $(echo "$(_eco_commands)" | peco | sed 's/\$//')
  fi
}

_eco $@
